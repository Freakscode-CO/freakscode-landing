---
import Layout from '../../layouts/Layout.astro';
import SurveyForm from '../../components/survey/SurveyForm';
import { surveyData } from '../../data/surveyDefinition';

const survey = surveyData.survey; // Usar el objeto survey dentro de surveyData
---

<Layout title="Encuesta para Profesionales de la Salud - FreaksCode">
	<main class="min-h-screen bg-gradient-to-b from-indigo-50 to-white pt-8 pb-16 px-4 md:px-8">
		<section class="container mx-auto">
			<h1 class="text-3xl md:text-4xl font-bold text-center text-indigo-900 mb-2">Encuesta para Profesionales de la Salud</h1>
			<p class="text-center text-gray-600 mb-8 max-w-2xl mx-auto">Ay√∫danos a entender mejor tus necesidades y expectativas como profesional de la salud o entrenador.</p>
			
			<div class="relative">
				<!-- Background Pattern -->
				<div class="absolute inset-0 bg-repeat opacity-5 pattern-dots" aria-hidden="true"></div>
				
				<!-- Survey Container -->
				<div class="relative z-10">
					<SurveyForm client:load survey={survey} />
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	.pattern-dots {
		background-image: radial-gradient(currentColor 1px, transparent 1px);
		background-size: 20px 20px;
	}
</style>

